<div id="game-data" data-game-id="<%= @game.id %>">
  Вы находитесь в игре №<%= @game.id %>
</div>
<div>Ваш противник: <%= opponent_user.email %></div>
<div id="game-field">
  <%= render 'game_field', :game_state => @game_state %>
</div>
<div>
  Сейчас ходит:
  <div id="game-state-current-user">
    <%= @game_state.current_user.email %>
  </div>
</div>
<div id="game-timer"><%= @time %></div>
